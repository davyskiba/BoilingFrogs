<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="BoilingFrogsTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="BoilingFrogsTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BoilingFrogsTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="BoilingFrogsTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark"/>

    <style name="BoilingFrogsTheme.CollapsingToolbar">
        <item name="android:textSize">@dimen/expanded_title_size</item>
    </style>
</resources>