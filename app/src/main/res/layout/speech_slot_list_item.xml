<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="speechSlot" type="com.panoprogramowanie.boilingfrogs.model.SpeechSlot"/>
    </data>


<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/speech_slot_container"
        android:paddingLeft="8dp">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
        <TextView
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
        android:text="@{speechSlot.timeLabel}"/>
        <TextView
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="12sp"
                android:textColor="@color/gray"
        android:text="@{speechSlot.favoriteSpeech.getPathStringIfHasDescription}"/>
    </LinearLayout>
    <android.support.v7.widget.CardView
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:padding="0dp"
            app:cardBackgroundColor="@color/my_schedule_speaker_overlay"
            app:cardPreventCornerOverlap="false"
            app:cardCornerRadius="8dp"
            app:contentPadding="0dp">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/photo"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    app:riv_corner_radius="8dp"
                    app:riv_border_width="0dp"
                    android:scaleType="centerCrop"
                    app:imageUrl="@{speechSlot.favoriteSpeech.speaker.photoUrl}"
                    app:placeholder="@{@drawable/avatar_placeholder}"
            />
            <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignTop="@+id/photo"
                    android:layout_alignLeft="@+id/photo"
                    android:layout_alignRight="@+id/photo"
                    android:layout_alignBottom="@+id/photo"
                    android:background="@drawable/my_schedule_speaker_overlay"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:maxLines="2"
                    android:textColor="@color/white"
                    android:textStyle="bold"
            android:text="@{speechSlot.favoriteSpeech.title}"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/empty_view"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="8dp"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:text="@{speechSlot.favoriteSpeech.speaker.name}"/>

            <View
                    android:id="@+id/empty_view"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_alignBottom="@+id/photo"
                    android:visibility="invisible"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
</layout>